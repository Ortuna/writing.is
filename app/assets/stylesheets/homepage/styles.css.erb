body {
  background-image: url(<%= asset_path('homepage/blur.png') %>);
  background-repeat: repeat-x;
}


.navigation {
  padding: 30px;
}

.navigation .links {
  float: right;
}

.hero h1 {
  color:#FFF;
  font-size: 4.0em;
}

.hero h2 {
  font-size: 2.7em;
  font-weight: 300;
}

.hero {
  text-align: center;
  color:#95A5A6;
}

.top .navigation a,
.top .navigation a:visited,
.top .navigation a:active {
  color: #FFF;
  text-decoration: none;
}

.top .navigation a:hover {
  color:#000;
}

.top {
  margin-bottom: 50px;
}

.row.signup {
  margin-top:20px;
}

.btn.btn-large.btn-signup {
  padding: 11px 18px 11px;
}

.container.header {
  color:#FFF;
}

.odd-strip {
  background-color: #F6F6F6;
  min-height: 308px;
}

.container.strip {
  margin: 0 auto;
  padding: 20px;
}

.main-content {
  background-color: #FFF;
  padding:40px 0px;
}

img.window-one {
  background-image: url(<%= asset_path('homepage/landing-pages.png')%>);
  background-position: 0px 20px;
  background-repeat: no-repeat;
}

img.window-three {
  background-image: url(<%= asset_path('homepage/landing-split.png')%>);
  background-position: 0px 20px;
  background-repeat: no-repeat;
}

.row.faces {
  padding-left: 80px;
}

img.face {
  border-radius: 90px;
  margin-left: -80px;
  height: 120px;
}

