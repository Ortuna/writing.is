%script{ type: "text/x-handlebars", "data-template-name" => "application"}
  {{render 'profile'}}
  {{outlet}}



%script{ type: "text/x-handlebars", "data-template-name" => "profile"}
  %header
    .row
      .span12
        .span1
          <img {{bindAttr src="gh.profile.avatar_url"}} class="profile-image"> 
        .span2
          .row.span6
            %h4 {{gh.profile.login}}
          .row.span6
            %h3 Explore Github Repos
        .span3.offset3.search
          %input{:type => 'text', :class => 'span3', :placeholder => 'Find a repo'}

%script{ type: "text/x-handlebars", "data-template-name" => "repos"}
  .span12
    .repos
      {{#each gh.repos}} {{render 'repo/show' this}} {{/each}}

%script{ type: "text/x-handlebars", "data-template-name" => "repo/show"}
  .repo{:class => cycle('odd', 'even') }
    .row.span8.offset1
      %h4 {{#linkTo 'files' full_name}} {{full_name}} {{/linkTo}}
      %p {{description}}

